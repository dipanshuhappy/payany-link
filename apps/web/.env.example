# Environment Variables for PayAny Money Web App

# Convex Database
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# PayPal Configuration
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# PyUSD Facilitator API
NEXT_PUBLIC_FACILITATOR_URL=http://localhost:3000

# Wallet Connect / RainbowKit
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=6b4e7efed7141d0d78856b9e23328f18

# Alchemy API (for token balances)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Application Settings
NEXT_PUBLIC_ROOT_DOMAIN=payany.link
NEXT_PUBLIC_APP_URL=https://payany.link

# Optional: Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ID=
SENTRY_DSN=

# Development Settings
NODE_ENV=development
